@using BlogApp.Helpers
@model List<Post>
@{
    ViewData["Title"] = "List";
}

<div class="container bg-white">

    <a href="/Post/AddBlog" class="btn  btn-primary">Yeni Post Ekle</a>

    <hr />
    <table id="myTable" class="table table-striped table-bordered mt-4" style="width:100%">
        <thead>
            <tr>
                <th>Resim</th>
                <th>Başlık</th>
                <th>Kullanıcı Adı</th>
                <th>Durum</th>
                                    
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                                
                <tr>
                <td><img src="/images/postimage/@item.Image" width="150" height="150" /></td>
                <td>@item.Title</td>
                <td>@item.User.Fullname</td>
                <td>@item.IsActive</td>                 
                <td>
                    <a asp-controller="Post" asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-sm btn-primary">Güncelle</a>
                    <a asp-controller="Post" asp-action="Delete" asp-route-id="@item.PostId" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
                                    
            }
                                

        </tbody>
        <tfoot>
            <tr>
                <th>Resim</th>
                <th>Başlık</th>
                <th>Kullanıcı Adı</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </tfoot>
    </table>

</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script>
        new DataTable('#myTable');
    </script>
    
}